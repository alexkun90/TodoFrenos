@page
@model ChangePasswordModel
@{
    ViewData["Title"] = "Cambiar Contraseña";
    ViewData["ActivePage"] = ManageNavPages.ChangePassword;
}
<link href="~/estilos/css/custom.css" rel="stylesheet" />

<div class="container mt-4">
    <partial name="_StatusMessage" for="StatusMessage" />

    <div class="card shadow-sm">
        <div class="card-header th-bg-custom text-white">
            <h5 class="mb-0">Actualizar Contraseña</h5>
        </div>
        <div class="card-body">
            <form id="change-password-form" method="post">
                <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                <div class="mb-3">
                    <label asp-for="Input.OldPassword" class="form-label">Contraseña Anterior</label>
                    <input asp-for="Input.OldPassword" class="form-control" type="password" autocomplete="current-password" aria-required="true" placeholder="Introduce tu contraseña anterior" />
                    <span asp-validation-for="Input.OldPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.NewPassword" class="form-label">Nueva Contraseña</label>
                    <input asp-for="Input.NewPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Introduce tu nueva contraseña" />
                    <span asp-validation-for="Input.NewPassword" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="Input.ConfirmPassword" class="form-label">Confirmar Nueva Contraseña</label>
                    <input asp-for="Input.ConfirmPassword" class="form-control" type="password" autocomplete="new-password" aria-required="true" placeholder="Confirma tu nueva contraseña" />
                    <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                </div>

                <button type="submit" class="btn btn-agree w-100 btn-lg">Actualizar Contraseña</button>
            </form>
        </div>
    </div>
    <br />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}