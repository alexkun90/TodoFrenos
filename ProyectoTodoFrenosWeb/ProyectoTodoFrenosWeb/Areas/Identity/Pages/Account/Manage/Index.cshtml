@page
@model IndexModel
@{
    ViewData["Title"] = "Perfil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<link href="~/estilos/css/custom.css" rel="stylesheet" />

<partial name="_StatusMessage" for="StatusMessage" />

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card shadow-sm">
                <div class="card-header th-bg-custom text-white">
                    <h5 class="mb-0">Información del Perfil</h5>
                </div>
                <div class="card-body">
                    <form id="profile-form" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

                        <div class="mb-3">
                            <label asp-for="Username" class="form-label">Nombre de Usuario</label>
                            <input asp-for="Username" class="form-control" placeholder="Nombre de Usuario" disabled />
                        </div>

                        <div class="mb-3">
                            <label asp-for="Input.PhoneNumber" class="form-label">Número de Teléfono</label>
                            <input asp-for="Input.PhoneNumber" class="form-control" placeholder="Introduce tu número de teléfono" />
                            <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
                        </div>

                        <button id="update-profile-button" type="submit" class="btn btn-agree w-100">Guardar Cambios</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}