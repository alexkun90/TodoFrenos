@page
@model LoginModel

@{
    ViewData["Title"] = "Iniciar Sesión";
    Layout = "~/Views/Shared/_LayoutSesion.cshtml";
}

    <div class="full-screen-container">
        <div class="center-card card">
            <div class="card-header">
                <img src="~/estilos/img/todofrenoslogo.png" alt="Logo" class="logo">
                <h2>@ViewData["Title"]</h2>
            </div>
            <div class="card-body">
                <form id="account" method="post">
                @if (TempData["ErrorMessage"] != null)
                {
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        @TempData["ErrorMessage"]
                       
                    </div>
                }
                    <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
                    <div class="txt_field">
                        <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" required />
                        <span></span>
                        <label>Correo Electrónico</label>
                        <span asp-validation-for="Input.Email" class="text-danger"></span>
                    </div>
                    <div class="txt_field">
                        <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" required />
                        <span></span>
                        <label>Contraseña</label>
                        <span asp-validation-for="Input.Password" class="text-danger"></span>
                    </div>
                <div class="pass mt-2">
                    <a style="text-decoration: none; color: #adadad;" href="@Url.Page("/Account/ForgotPassword")">¿Olvidaste tu contraseña?</a>
                </div>
                    <input type="submit" value="Iniciar Sesión" class="w-100 btn btn-lg btn-primary" /> 
