@page
@model ResetPasswordModel
@{
    ViewData["Title"] = "Restablecer Contraseña";
}
<link href="~/estilos/css/custom.css" rel="stylesheet" />

<h1 class="text-center mb-4">@ViewData["Title"]</h1>
<h2 class="text-center mb-4">Ingresa tu nueva contraseña.</h2>
<hr />

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-light">
                <div class="card-body">
                    <form method="post">
                        <div class="form-group">
                            <label asp-for="Input.CurrentPassword"></label>
                            <input asp-for="Input.CurrentPassword" class="form-control" />
                            <span asp-validation-for="Input.CurrentPassword" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.Password"></label>
                            <input asp-for="Input.Password" class="form-control" />
                            <span asp-validation-for="Input.Password" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label asp-for="Input.ConfirmPassword"></label>
                            <input asp-for="Input.ConfirmPassword" class="form-control" />
                            <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
                        </div>

                        <input type="hidden" asp-for="Input.Email" />
                        <input type="hidden" asp-for="Input.Code" />

                        <button type="submit" class="btn btn-primary">Reset Password</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}