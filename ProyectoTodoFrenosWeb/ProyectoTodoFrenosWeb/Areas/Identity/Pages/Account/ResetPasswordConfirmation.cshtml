@page
@model ResetPasswordConfirmationModel
@{
    ViewData["Title"] = "Confirmación de Restablecimiento de Contraseña";
}
<link href="~/estilos/css/custom.css" rel="stylesheet" />

<h1 class="text-center mb-4">@ViewData["Title"]</h1>
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-sm border-light">
                <div class="card-body text-center">
                    <p class="mb-4 fs-5">Tu contraseña ha sido restablecida con éxito.</p>
                    <a asp-page="./Login" class="btn btn-agree btn-lg">Iniciar sesión</a>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>