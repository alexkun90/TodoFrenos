@model DAL.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h2 class="mt-3" style="text-align:center;">Crear Cita</h2>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-5">
    <div class="card rounded-3 p-4 w-50">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label">Usuario</label>
                <input asp-for="UserId" class="form-control" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <input asp-for="VehicleId" class ="form-control"/>
            </div>-->
            <!--
            <div class="form-group">
                <label asp-for="AppointDate" class="control-label"></label>
                <input asp-for="AppointDate" class="form-control" />
                <span asp-validation-for="AppointDate" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="AppointCreationDate" class="control-label">Fecha de Cita</label>
                <input asp-for="AppointCreationDate" class="form-control" />
                <span asp-validation-for="AppointCreationDate" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="AppointModifyDate" class="control-label"></label>
                <input asp-for="AppointModifyDate" class="form-control" />
                <span asp-validation-for="AppointModifyDate" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="Reason" class="control-label">Motivo</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label for="AppointState" class="form-label">Estado</label>
                @{
                    var estados = new List<SelectListItem>
                {
                new SelectListItem { Value = "1", Text = "Activo" },
                new SelectListItem { Value = "0", Text = "Inactivo" }
                };
                }

                @Html.DropDownListFor(m => m.AppointState, estados, new { @class = "form-select", @required = "true" })
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Registrar" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
