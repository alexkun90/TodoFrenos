@model DAL.Models.Appointment

@{
    ViewData["Title"] = "Edit";
}



<h2 class="mt-3" style="text-align:center;">Editar Cita</h2>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-5">
    <div class="card rounded-3 p-4 w-50">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="AppointId" />
            <div class="form-group d-none">
                <label asp-for="UserId" class="control-label">Propietario</label>
                <input asp-for="UserId" class="form-control" readonly="readonly" value="@User.FindFirstValue(ClaimTypes.NameIdentifier)" />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="VehicleId" class="control-label"></label>
                <select asp-for="VehicleId" class="form-control" asp-items="ViewBag.VehicleId"></select>
                <span asp-validation-for="VehicleId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AppointDate" class="control-label"></label>
                <input asp-for="AppointDate" class="form-control" />
                <span asp-validation-for="AppointDate" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="AppointCreationDate" class="control-label">Fecha</label>
                <input asp-for="AppointCreationDate" class="form-control" />
                <span asp-validation-for="AppointCreationDate" class="text-danger"></span>
            </div>
            <!--
            <div class="form-group">
                <label asp-for="AppointModifyDate" class="control-label"></label>
                <input asp-for="AppointModifyDate" class="form-control" />
                <span asp-validation-for="AppointModifyDate" class="text-danger"></span>
            </div>-->
            <div class="form-group">
                <label asp-for="Reason" class="control-label">Motivo</label>
                <input asp-for="Reason" class="form-control" />
                <span asp-validation-for="Reason" class="text-danger"></span>
            </div>
            <div class="col-md-3">
                <label for="AppointState" class="form-label">Estado</label>
                @{
                    var estados = new List<SelectListItem>
                {
                new SelectListItem { Value = "1", Text = "Activo" },
                new SelectListItem { Value = "0", Text = "Inactivo" }
                };
                }

                @Html.DropDownListFor(m => m.AppointState, estados, new { @class = "form-select", @required = "true" })
            </div>
            <br />
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
            <br />
            <div>
                <a asp-action="Index" class="btn btn-secondary">Volver a la lista</a>
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
