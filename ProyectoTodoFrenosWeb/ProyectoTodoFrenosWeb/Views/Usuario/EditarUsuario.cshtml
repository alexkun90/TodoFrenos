@model EditarUsuarioViewModel

@{
    ViewData["Title"] = "Modificar Usuario";
}

<div class="container d-flex justify-content-center align-items-center m-5">
    <div class="card rounded-3 p-4">
        <h3 class="mb-3">Editar Usuario</h3>
        <form asp-action="EditarUsuario" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="Id" />

            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PrimApellido" class="form-label"></label>
                <input asp-for="PrimApellido" class="form-control" />
                <span asp-validation-for="PrimApellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SegunApellido" class="form-label"></label>
                <input asp-for="SegunApellido" class="form-control" />
                <span asp-validation-for="SegunApellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Activo" class="form-label">Estado del Usuario</label>
                <select asp-for="Activo" class="form-select">
                    <option value="true" selected>Activo</option>
                    <option value="false">Inactivo</option>
                </select>
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Roles" class="form-label">Roles</label>
                <select asp-for="Roles" asp-items="@(new MultiSelectList(ViewBag.Roles as List<string>))" multiple class="form-select"></select>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom">Confirmar Cambios</button>
        </form>

        <div class="mt-3">
            <a asp-action="ListaUsuarios" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
