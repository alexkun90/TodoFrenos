@model RegistroModelo

@{
    ViewData["Title"] = "Registrar Usuario";
    Layout = "~/Views/Shared/_LayoutExterno.cshtml";
}

<div class="full-screen-container">
    <div class="center-card">
        <h1>@ViewData["Title"]</h1>
        <form asp-action="CrearUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" role="alert"></div>

            <div style="display: flex; gap: 20px;">
                <div class="form-column">
                    <div class="txt_field">
                        <input asp-for="NombreUsuario" class="form-control"  aria-required="true" required />
                        <span></span>
                        <label>Nombre de Usuario</label>
                        <span asp-validation-for="NombreUsuario" class="text-danger"></span>
                    </div>
                    <div class="txt_field">
                        <input asp-for="PrimApellido" class="form-control"  aria-required="true" required />
                        <span></span>
                        <label>Primer Apellido</label>
                        <span asp-validation-for="PrimApellido" class="text-danger"></span>
                    </div>
                    <div class="txt_field">
                        <input asp-for="SegunApellido" class="form-control"  aria-required="true" required />
                        <span></span>
                        <label>Segundo Apellido</label>
                        <span asp-validation-for="SegunApellido" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-column">
                    <div class="txt_field">
                        <input asp-for="Email" class="form-control"  aria-required="true" required />
                        <span></span>
                        <label>Correo Electrónico</label>
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                    <div class="txt_field">
                        <input asp-for="Password" class="form-control"  aria-required="true" required />
                        <span></span>
                        <label>Contraseña</label>
                        <span asp-validation-for="Password" class="text-danger"></span>
                    </div>
                    <div class="txt_field">
                        <input asp-for="ConfirmPassword" class="form-control"  aria-required="true" required />
                        <span></span>
                        <label>Confirmar Contraseña</label>
                        <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <div class="mb-3">
                <label asp-for="Activo" class="form-label">Estado del Usuario:</label>
                <input asp-for="Activo" type="checkbox" />
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <div class="mb-3">
                        <label class="control-label me-3 mb-2">Roles:</label>
                        <div class="form-check">
                            <input type="radio" asp-for="Roles" value="Admin" class="form-check-input" id="RoleAdmin">
                            <label class="form-check-label" for="RoleAdmin">Administrador</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="Roles" value="User" class="form-check-input" id="RoleUser">
                            <label class="form-check-label" for="RoleUser">Usuario</label>
                        </div>
                        <div class="form-check">
                            <input type="radio" asp-for="Roles" value="Mecanico" class="form-check-input" id="RoleMecanico">
                            <label class="form-check-label" for="RoleMecanico">Mecánico</label>
                        </div>
                        <span asp-validation-for="Roles" class="text-danger"></span>
                    </div>
                </div>
            </div>

            <button type="submit" class="w-100 btn btn-lg btn-custom">Registrar Usuario</button>

            @*<div class="mt-3">
                <a asp-action="ListaUsuarios" class="btn btn-secondary">Volver a la Lista</a>
            </div>*@
        </form>
    </div>
</div>

<script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
<script>
    $(document).ready(function () {
        $('.select2').select2({
            placeholder: 'Seleccione roles',
            allowClear: true
        });
    });
</script>
