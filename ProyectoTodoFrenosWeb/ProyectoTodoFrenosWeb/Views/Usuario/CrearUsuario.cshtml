@model RegistroModelo

@{
    ViewData["Title"] = "Agregar Usuario";
}

<div class="container d-flex justify-content-center align-items-center mt-5 mb-5">
    <div class="card rounded-3 p-4">
        <h3 class="mb-3">Agregar Usuario</h3>
        <form asp-action="CrearUsuario">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="NombreUsuario" class="form-label"></label>
                <input asp-for="NombreUsuario" class="form-control" placeholder="Ingrese el nombre de usuario" />
                <span asp-validation-for="NombreUsuario" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="PrimApellido" class="form-label"></label>
                <input asp-for="PrimApellido" class="form-control" placeholder="Ingrese el primer apellido" />
                <span asp-validation-for="PrimApellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="SegunApellido" class="form-label"></label>
                <input asp-for="SegunApellido" class="form-control" placeholder="Ingrese el segundo apellido" />
                <span asp-validation-for="SegunApellido" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Email" class="form-label"></label>
                <input asp-for="Email" class="form-control" placeholder="Ingrese el correo electrónico" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password" class="form-control" placeholder="Ingrese contraseña" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="ConfirmPassword" class="form-label"></label>
                <input asp-for="ConfirmPassword" class="form-control" placeholder="Ingrese otra vez contraseña" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Activo" class="form-label">Estado del Usuario</label><br />
                <input asp-for="Activo" type="checkbox" />
                <span asp-validation-for="Activo" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Roles" class="form-label">Roles</label>
                <select asp-for="Roles" asp-items="@(new MultiSelectList(ViewBag.Roles as List<string>))" multiple class="form-select"></select>
                <span asp-validation-for="Roles" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-custom">Agregar Usuario</button>
        </form>

        <div class="mt-3">
            <a asp-action="ListaUsuarios" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
