@model DAL.Models.Product

@{
    ViewData["Title"] = "ModificarProductos";
}

<div class="container d-flex justify-content-center align-items-center m-5">
    <div class="card rounded-3 p-4">
        <h3 class="mb-3">Editar Producto</h3>
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="ProductId" />
            <input type="hidden" asp-for="ImageProduct" />

            <div class="mb-3">
                <label asp-for="ProductName" class="form-label"></label>
                <input asp-for="ProductName" class="form-control" />
                <span asp-validation-for="ProductName" class="text-danger"></span>
            </div>

            <div class="row mb-3">
                <div class="col-md-6">
                    <label asp-for="Price" class="form-label"></label>
                    <input asp-for="Price" class="form-control" />
                    <span asp-validation-for="Price" class="text-danger"></span>
                </div>

                <div class="col-md-4">
                    <label asp-for="CategoryId" class="form-label"></label>
                    <select asp-for="CategoryId" class="form-select" asp-items="ViewBag.CategoryId"></select>
                    <span asp-validation-for="CategoryId" class="text-danger"></span>
                </div>

                <div class="col-md-2">
                    <label asp-for="Stock" class="form-label"></label>
                    <input asp-for="Stock" class="form-control" />
                    <span asp-validation-for="Stock" class="text-danger"></span>
                </div>
            </div>

            <div class="row mb-3">
                <div class="col-md-8">
                    <label for="imagen" class="control-label">Imagen</label>
                    <input type="file" name="imagen" class="form-control" accept="image/jpeg" />
                </div>

                <div class="col-md-4 d-flex align-items-center justify-content-center">
                    <img src="@(Model.ImageProduct != null && Model.ImageProduct.Length > 0 ? "data:image/jpeg;base64," + Convert.ToBase64String(Model.ImageProduct) : "~/estilos/img/placeholder.jpg")" width="200" height="200" alt="Imagen del producto" />
                </div>
            </div>

            <button type="submit" class="btn btn-custom">Confirmar Cambios</button>
        </form>

        <div class="mt-3">
            <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
