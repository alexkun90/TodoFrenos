@model DAL.Models.Vehicle

@{
    ViewData["Title"] = "Detalles del Vehículo";
}

<div class="container d-flex justify-content-center align-items-center mt-3 mb-5">
    <div class="card rounded-3 p-4 w-50">
        <h4 class="text-center">Datos generales del vehículo</h4>
        <hr />
        <ul class="list-group">
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p style="font-weight:bold !important">Propietario:</p>
                <span>@ViewBag.CompleateName</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p style="font-weight:bold !important">Modelo:</p>
                <span>@Html.DisplayFor(model => model.Brand)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p style="font-weight:bold !important">Placa:</p>
                <span>@Html.DisplayFor(model => model.Plate)</span>
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p style="font-weight:bold !important">Fecha de Ingreso:</p>
                <span>@Html.DisplayFor(model => model.CreationDate)</span>
                
            </li>
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <p style="font-weight:bold !important">Vin:</p>
                <span>@Html.DisplayFor(model => model.Vin)</span>
            </li>
        </ul>
    </div>
</div>
