
@{
    ViewData["Title"] = "ModificarProductos";
}

<div class="container d-flex justify-content-center align-items-center m-5">
    <div class="card rounded-3 p-4">
        <form>
            <div class="mb-3">
                <label for="nombre" class="form-label">Nombre</label>
                <input type="text" class="form-control" id="nombre" placeholder="Bateria Plomo Acido">
            </div>
            <div class="row mb-3">
                <div class="col-md-6">
                    <label for="precio" class="form-label">Precio</label>
                    <input type="number" class="form-control" id="precio" placeholder="000.00">
                </div>
                <div class="col-md-4">
                    <label for="categoria" class="form-label">Categoria</label>
                    <select id="categoria" class="form-select">
                        <option selected>Bateria</option>
                        <option>Frenos</option>
                        <option>Clutchs</option>
                        <option>Lubricante</option>
                    </select>
                </div>
                <div class="col-md-2">
                    <label for="inventario" class="form-label">Inventario</label>
                    <input type="number" class="form-control" id="inventario" placeholder="10">
                </div>
            </div>
            <div class="row mb-3">
                <div class="col-md-8">
                    <label for="imagen" class="form-label">Imagen</label>
                    <input type="file" class="form-control" id="imagen">
                </div>
                <div class="col-md-4">
                    <img src="~/estilos/img/img-bate-p1.jpg" width="200" height="200" />
                </div>
            </div>
            <button type="submit" class="btn btn-custom">Confirmar Cambios</button>
        </form>
    </div>
</div>

