@model DAL.Models.Empleado

@{
    ViewData["Title"] = "Editar Empleado";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Empleado</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>
                        <input type="hidden" asp-for="Id" />

                        <div class="form-group mb-3">
                            <label asp-for="Cedula" class="form-label">Cédula</label>
                            <input asp-for="Cedula" class="form-control" />
                            <span asp-validation-for="Cedula" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Nombre" class="form-label">Nombre</label>
                            <input asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Apellido1" class="form-label">Primer Apellido</label>
                            <input asp-for="Apellido1" class="form-control" />
                            <span asp-validation-for="Apellido1" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Apellido2" class="form-label">Segundo Apellido</label>
                            <input asp-for="Apellido2" class="form-control" />
                            <span asp-validation-for="Apellido2" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Puesto" class="form-label">Puesto</label>
                            <input asp-for="Puesto" class="form-control" />
                            <span asp-validation-for="Puesto" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="FechaIngreso" class="form-label">Fecha de Ingreso</label>
                            <input asp-for="FechaIngreso" class="form-control" type="date" />
                            <span asp-validation-for="FechaIngreso" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Guardar" class="btn btn-agree w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
