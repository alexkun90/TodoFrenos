@model IEnumerable<DAL.Models.Order>
@using ProyectoTodoFrenosWeb.Areas.Identity.Pages.Account.Manage

@{
    ViewData["Title"] = "Lista de Pedidos";
}

<div class="container mt-5">
    <div class="header mb-4">
        <h1 class="text-center">Lista de Pedidos</h1>
    </div>

    <table class="table table-striped table-bordered">
        <thead class="thead-dark">
            <tr>
                <th>Código de Pedido</th>
                <th>Fecha del Pedido</th>
                <th>Fecha de Retiro</th>
                <th>Subtotal</th>
                <th>IVA</th>
                <th>Total</th>
                <th>Acciones</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.CodigoOrder)</td>
                    <td>@item.OrderDate.ToString("dd MMM yyyy")</td>
                    <td>@item.RetirementDate.ToString("dd MMM yyyy")</td>
                    <td>₡@Html.DisplayFor(modelItem => item.SubTotal)</td>
                    <td>₡@Html.DisplayFor(modelItem => item.Tax)</td>
                    <td>₡@Html.DisplayFor(modelItem => item.Total)</td>
                    <td>
                        <a class="btn btn-details btn-sm" href="@Url.Action("OrderDetailList", "Orders", new { orderId = item.OrderId })">Detalles</a>
                       @* <a class="btn btn-delete btn-sm ml-2" asp-action="Delete" asp-route-id="@item.OrderId">Eliminar</a>*@
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
