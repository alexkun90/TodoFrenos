@model DAL.Models.DetallesNomina

@{
    ViewData["Title"] = "Editar Detalles de Nómina";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Editar Detalles de Nómina</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <input type="hidden" asp-for="DetalleId" />
                        <input type="hidden" asp-for="NominaId" />
                        <input type="hidden" asp-for="EmpleadoId" />

                        <div class="form-group mb-3">
                            <label asp-for="Semanal" class="form-label">Semanal</label>
                            <input asp-for="Semanal" class="form-control" />
                            <span asp-validation-for="Semanal" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Mensual" class="form-label">Mensual</label>
                            <input asp-for="Mensual" class="form-control" />
                            <span asp-validation-for="Mensual" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Diario" class="form-label">Diario</label>
                            <input asp-for="Diario" class="form-control" />
                            <span asp-validation-for="Diario" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Hora" class="form-label">Hora</label>
                            <input asp-for="Hora" class="form-control" />
                            <span asp-validation-for="Hora" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CantidadHoras" class="form-label">Cantidad de Horas</label>
                            <input asp-for="CantidadHoras" class="form-control" />
                            <span asp-validation-for="CantidadHoras" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="HorasExtra" class="form-label">Horas Extra</label>
                            <input asp-for="HorasExtra" class="form-control" />
                            <span asp-validation-for="HorasExtra" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CantidadHorasExtra" class="form-label">Cantidad de Horas Extra</label>
                            <input asp-for="CantidadHorasExtra" class="form-control" />
                            <span asp-validation-for="CantidadHorasExtra" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ccss" class="form-label">CCSS</label>
                            <input asp-for="Ccss" class="form-control" />
                            <span asp-validation-for="Ccss" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Vales" class="form-label">Vales</label>
                            <input asp-for="Vales" class="form-control" />
                            <span asp-validation-for="Vales" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Pago" class="form-label">Pago</label>
                            <input asp-for="Pago" class="form-control" />
                            <span asp-validation-for="Pago" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Guardar" class="btn btn-agree w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
