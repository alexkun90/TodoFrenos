@model DAL.Models.DetallesNomina

@{
    ViewData["Title"] = "Crear Detalles de Nómina";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Crear Detalles de Nómina</h2>
    <hr />

    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-sm">
                <div class="card-body">
                    <form asp-action="Create" method="post">
                        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                        <div class="form-group mb-3">
                            <label asp-for="EmpleadoId" class="form-label">Empleado</label>
                            <select asp-for="EmpleadoId" class="form-select" asp-items="ViewBag.EmpleadoId">
                                <option value="">Seleccione un empleado</option>
                            </select>
                            <span asp-validation-for="EmpleadoId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="NominaId" class="form-label">Nómina</label>
                            <select asp-for="NominaId" class="form-select" asp-items="ViewBag.NominaId">
                                <option value="">Seleccione una nómina</option>
                            </select>
                            <span asp-validation-for="NominaId" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CantidadHoras" class="form-label">Cantidad de Horas</label>
                            <input asp-for="CantidadHoras" class="form-control" />
                            <span asp-validation-for="CantidadHoras" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Hora" class="form-label">Hora</label>
                            <input asp-for="Hora" class="form-control" />
                            <span asp-validation-for="Hora" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="CantidadHorasExtra" class="form-label">Horas Extra</label>
                            <input asp-for="CantidadHorasExtra" class="form-control" />
                            <span asp-validation-for="CantidadHorasExtra" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="HorasExtra" class="form-label">Valor Horas Extra</label>
                            <input asp-for="HorasExtra" class="form-control" />
                            <span asp-validation-for="HorasExtra" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Ccss" class="form-label">CCSS</label>
                            <input asp-for="Ccss" class="form-control" />
                            <span asp-validation-for="Ccss" class="text-danger"></span>
                        </div>

                        <div class="form-group mb-3">
                            <label asp-for="Vales" class="form-label">Vales</label>
                            <input asp-for="Vales" class="form-control" />
                            <span asp-validation-for="Vales" class="text-danger"></span>
                        </div>

                        <div class="text-center">
                            <input type="submit" value="Crear" class="btn btn-agree w-100" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <br />
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
