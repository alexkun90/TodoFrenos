@model IEnumerable<ProyectoTodoFrenosWeb.ViewModels.PlayRollDTO>
@{
    ViewBag.Title = "Lista de Nóminas";
}

<h2>Lista de Nóminas</h2>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Nómina ID</th>
            <th>Cédula</th>
            <th>Nombre Completo</th>
            <th>Puesto</th>
            <th>Fecha Inicio</th>
            <th>Fecha Fin</th>
            <th>Salario Neto</th>
            <th>Acciones</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.NominaId</td>
                <td>@item.Cedula</td>
                <td>@item.NombreCompleto</td>
                <td>@item.Puesto</td>
                <td>@item.FechaInicio?.ToString("dd/MM/yyyy")</td>
                <td>@item.FechaFin?.ToString("dd/MM/yyyy")</td>
                <td>@item.SalarioNeto?.ToString("C")</td>
                <td>
                    <a href="@Url.Action("Details", "Playroll", new { nominaId = item.NominaId })" class="btn btn-primary btn-sm">Ver Detalles</a>
                    <a href="@Url.Action("Create", "Planilla", new { nominaId = item.NominaId })" class="btn btn-primary btn-sm">Gestionar Planilla</a>
                    <a href="@Url.Action("Index", "Planilla", new { nominaId = item.NominaId })" class="btn btn-primary btn-sm">Ver Planilla</a>
                </td>
            </tr>
        }
    </tbody>
</table>