@model ProyectoTodoFrenosWeb.ViewModels.PlayRollDTO

@{
    ViewBag.Title = "Detalles de la Nómina";
}

<div class="container mt-5">
    <h2 class="text-center mb-4">Detalles de la Nómina</h2>
    <hr />

    <div class="row">
        <div class="col-md-8 offset-md-2">
            <!-- Información del Empleado -->
            <div class="card mb-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-8">Cédula</dt>
                        <dd class="col-sm-4">@Model.Cedula</dd>

                        <dt class="col-sm-8">Nombre Completo</dt>
                        <dd class="col-sm-4">@Model.NombreCompleto</dd>

                        <dt class="col-sm-8">Puesto</dt>
                        <dd class="col-sm-4">@Model.Puesto</dd>
                    </dl>
                </div>
            </div>

            <!-- Detalles de la Nómina -->
            <div class="card mb-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-8">ID de Nómina</dt>
                        <dd class="col-sm-4">@Model.NominaId</dd>

                        <dt class="col-sm-8">Fecha de Inicio</dt>
                        <dd class="col-sm-4">@Model.FechaInicio?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-8">Fecha de Fin</dt>
                        <dd class="col-sm-4">@Model.FechaFin?.ToString("dd/MM/yyyy")</dd>

                        <dt class="col-sm-8">Salario Base</dt>
                        <dd class="col-sm-4">₡@Model.SalarioBase?.ToString("N")</dd>

                        <dt class="col-sm-8">Pluses Salariales</dt>
                        <dd class="col-sm-4">₡@Model.PlusesSalariales?.ToString("N")</dd>

                        <dt class="col-sm-8">Horas Extras</dt>
                        <dd class="col-sm-4">@Model.HorasExtras</dd>

                        <dt class="col-sm-8">Días de Vacaciones</dt>
                        <dd class="col-sm-4">@Model.DiasVacaciones</dd>

                        <dt class="col-sm-8">Incapacidad</dt>
                        <dd class="col-sm-4">@Model.Incapacidad</dd>

                        <dt class="col-sm-8">Salario Bruto</dt>
                        <dd class="col-sm-4">₡@Model.SalarioBruto?.ToString("N")</dd>
                    </dl>
                </div>
            </div>

            <!-- Deducciones -->
            <div class="card mb-4">
                <div class="card-body">
                    <dl class="row">
                        <dt class="col-sm-8">SEN (Seguro Enfermedad)</dt>
                        <dd class="col-sm-4">₡@Model.SEM?.ToString("N")</dd>

                        <dt class="col-sm-8">IVM (Invalidez, Vejez y Muerte)</dt>
                        <dd class="col-sm-4">₡@Model.IVM?.ToString("N")</dd>

                        <dt class="col-sm-8">LPT (Aporte Trabajador BP)</dt>
                        <dd class="col-sm-4">₡@Model.LPT?.ToString("N")</dd>

                        <dt class="col-sm-8">Impuesto de Renta</dt>
                        <dd class="col-sm-4">₡@Model.ImpuestoRenta?.ToString("N")</dd>

                        <dt class="col-sm-8">Salario Neto</dt>
                        <dd class="col-sm-4">₡@Model.SalarioNeto?.ToString("N")</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>
