@model DAL.Models.Asistence

@{
    ViewData["Title"] = "Create";
}

<h2 class="mt-3" style="text-align:center;">Crear Vehículo</h2>

<div class="container d-flex justify-content-center align-items-center mt-3 mb-5">
    <div class="card rounded-3 p-4 w-50">
        @using (Html.BeginForm("Create", "Asistence", FormMethod.Post))
        {
            @Html.HiddenFor(m => m.AsistenciaId)
            @Html.HiddenFor(m => m.EmpleadoId) 
            <div class="mb-3">
                <label for="Fecha" class="form-label">Fecha</label>
                @Html.TextBoxFor(m => m.Fecha, new { @class = "form-control",@type="Date", @required = "true" })
            </div>
            <div class="mb-3">
                <label for="HoraLlegada" class="form-label">Hora Llegada</label>
                @Html.TextBoxFor(m => m.HoraLlegada, new { @class = "form-control", @type = "text", @required = "true" })
            </div>
            <div class="row mb-3">

                <div class="col-md-5">
                    <label for="HoraSalida" class="form-label">Hora Salida</label>
                    @Html.TextBoxFor(m => m.HoraSalida, new { @class = "form-control", @type = "text",  @required = "true" })
                </div>

                <div class="col-md-3">
                    <label for="TipoAsistencia" class="form-label">Asistencia</label>
                    @{
                        var tipoVehicylo = new List<SelectListItem>
                {
                new SelectListItem { Value = "Presente", Text = "Presente" },
                new SelectListItem { Value = "Ausente", Text = "Ausente" },
                new SelectListItem { Value = "Incapacitado", Text = "Incapacitado" },
                new SelectListItem { Value = "Licencia Maternidad", Text = "Licencia Maternidad" },
                new SelectListItem { Value = "Vacaciones", Text = "Vacaciones" }
                };
                    }

                    @Html.DropDownListFor(m => m.TipoAsistencia, tipoVehicylo, new { @class = "form-select", @required = "true" })
                </div>

            </div>

            <button type="submit" class="btn btn-agree">Guardar</button>
        }

    </div>
</div>
