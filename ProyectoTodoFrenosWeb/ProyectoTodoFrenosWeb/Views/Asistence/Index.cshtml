@model IEnumerable<DAL.Models.Asistence>

@{
    ViewData["Title"] = "Index";
}

<div class="container mt-5">
    <h2 style="text-align:center;">
        Historial de Asistencias
    </h2>
    <div class="mb-2">
        <a asp-action="Create" asp-route-empleadoId="@ViewBag.employeeId" class="btn btn-agree">
            Nueva Asistencia
            <i class=" ms-1 fa-solid fa-file-lines"></i>
        </a>
    </div>
    <div class="container-border-custom mb-2">
        <div class="table-responsive">
            <div id="dataTable_wrapper" class="dataTables_wrapper">
                <div class="col-sm-12">
                    <div class="col-sm-12">

                        <table id="myDataTable" class="table table-bordered dataTable" style="width: 100%;">

                            <thead>

                                <tr>
                                    <th class="th-bg-custom">Fecha</th>
                                    <th class="th-bg-custom">Hora de Llegada</th>
                                    <th class="th-bg-custom">Hora de Salida</th>
                                    <th class="th-bg-custom">Asistencia</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.Fecha)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.HoraLlegada)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.HoraSalida)
                                        </td>
                                        <td class="text-center align-middle">
                                            @Html.DisplayFor(modelItem => item.TipoAsistencia)
                                        </td>
                                        <td class="text-center align-middle">

                                           @*  <a class="btn btn-modify" asp-action="Edit" asp-route-id="@item.AsistenciaId">Editar</a> *@
                                            
                                           @* <a class="btn btn-details" asp-action="Details" asp-route-id="@item.AsistenciaId">Detalles</a> *@
                                            
                                            @* <a class="btn btn-delete" asp-action="Delete" asp-route-id="@item.VehicleInspectionId">Delete</a> *@
                                            @*<button type="button" class="btn btn-inactive AbrirModal" data-bs-toggle="modal" data-bs-target="#exampleModal"
                                        data-id="@item.VehicleInspectionId" style="font:bold;font-size:18px">
                                        Eliminar
                                        </button>*@
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script src="~/estilos/js/jquery-1.11.0.min.js"></script>
<script>

    $(document).ready(function () {
        $('#myDataTable').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.10.24/i18n/Spanish.json"
            },
            "info": false
        });

