<style>
    .card-container {
        position: relative;
        overflow: hidden;
        min-height: 400px;
        transition: height 0.3s ease-in-out;
        border: 1px solid #ddd;
        border-radius: 10px;
        display: flex;
        flex-direction: column;
    }

        .card-container:hover {
            height: 600px;
        }

    .card-body {
        padding: 20px;
        flex: 1;
        z-index: 1;
        transition: opacity 0.3s;
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
    }

    .card-info {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: rgba(0, 0, 0, 0.7);
        color: white;
        opacity: 0;
        transition: opacity 0.3s, background 0.3s;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        text-align: center;
        padding: 20px;
        box-sizing: border-box;
        overflow-y: auto;
        z-index: 0;
    }

    .card-container:hover .card-info {
        opacity: 1;
        background: rgba(0, 0, 0, 0.5);
    }

    .card-body {
        transition: opacity 0.3s;
    }

    .card-container:hover .card-body {
        opacity: 0.3;
    }

    .card-info ul {
        list-style: none;
        padding: 0;
        margin: 0;
        font-size: 16px;
    }

        .card-info ul li {
            margin-bottom: 10px;
        }

    .img-fluid {
        border-radius: 10px;
        border: 4px solid #007bff;
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.3);
    }

    .img-container {
        display: flex;
        justify-content: center;
        align-items: center;
        overflow: hidden;
        border-radius: 15px;
        background: #f8f9fa;
        padding: 15px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
    }

    .section-title {
