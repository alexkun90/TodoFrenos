@{
    ViewData["Title"] = "Inicio";
}
<div id="demo" class="carousel slide m-1" data-bs-ride="carousel">

    <!-- Barras del carousel -->
    <div class="carousel-indicators">
        <button type="button" data-bs-target="#demo" data-bs-slide-to="0" class="active"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="1"></button>
        <button type="button" data-bs-target="#demo" data-bs-slide-to="2"></button>
    </div>

    <!-- Contenido del carousel -->
    <div class="carousel-inner">
        <div class="carousel-item active">
            <img src="~/Estilos/img/carousel-img-1.jpg" class="img-fluid d-block w-100" style="max-height: 650px;"/>
            <div class="carousel-caption align-items-center justify-content-center">
                <h2>Especialistas en Frenos</h2>
                <p>Mecanica para cualquier vehículo!</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Estilos/img/carousel-img-2.jpg" class="img-fluid d-block w-100" style="max-height: 650px;"/>
            <div class="carousel-caption align-items-center justify-content-center">
                <h2>Repuestos de Calidad</h2>
                <p>Para todas las marcas</p>
            </div>
        </div>
        <div class="carousel-item">
            <img src="~/Estilos/img/carousel-img-3.jpg" class="img-fluid d-block w-100" style="max-height: 650px;"/>
            <div class="carousel-caption align-items-center justify-content-center">
                <h2>Rescate en Carretera</h2>
                <p>¿Varado en carretera?</p>
            </div>
        </div>
    </div>

    <!-- Flechas -->
    <button class="carousel-control-prev" type="button" data-bs-target="#demo" data-bs-slide="prev">
        <span class="carousel-control-prev-icon"></span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#demo" data-bs-slide="next">
        <span class="carousel-control-next-icon"></span>
    </button>
</div>

